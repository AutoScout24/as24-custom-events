{
  "name": "as24-custom-events",
  "version": "0.0.1",
  "description": "Typings for custom events across as24 pages",
  "author": "Inaki Anduaga <inaki.anduaga@scout24.com>",
  "license": "MIT",
  "private": false,
  "types": "./dist/src/index.ts",
  "repository": "github.com/Scout24/as24-custom-events",
  "devDependencies": {
    "jest": "^23.5.0",
    "prettier": "^1.14.2",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^3.0.1"
  },
  "scripts": {
    "build": "tsc",
    "prebuild": "rm -rf ./dist",
    "tslint:fix": "tslint -c ./tslint.json --fix --project ./",
    "test": "jest",
    "test:watch": "jest --notify --watch",
    "test:coverage:publish": "codecov",
    "test:prettier": "prettier --list-different '*/**/*.{js,ts,tsx,json,md,scss,graphql,css}' || (echo \"Problem with code format. Please do yarn run prettier:fix\" && exit 1)"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ],
    "testRegex": "(/test/.*|\\.(test|spec))\\.(ts)$",
    "moduleFileExtensions": [
      "ts"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "coverageReporters": [
      "cobertura",
      "html",
      "text",
      "text-summary"
    ]
  }
}
